<Window x:Class="SportFIT.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SportFIT.Views"
        Background="{StaticResource BackgroundColor}"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Icon="../images/SportFIT_logo.ico"
        d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.Resources>
            <!-- Define el color que quieres usar -->
            <SolidColorBrush x:Key="NavigationColor" Color="#134F5C" />
        </Grid.Resources>

        <!-- ColumnDefinitions -->
        <Grid.ColumnDefinitions>
            <!-- Columna 1: Ancho fijo de 380px -->
            <ColumnDefinition Width="380"/>

            <!-- Columna 2: Ancho flexible -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Fondo de la primera columna -->
        <Rectangle Grid.Column="0" Fill="{StaticResource NavigationColor}" />
        <!--Imagen barra navegacion-->
        <Image Grid.Column="0" Source="../images/SportFIT_logo.PNG" Width="150" Height="150" Margin="0,15,0,0"
       HorizontalAlignment="Center" VerticalAlignment="Top"/>
        
        <TextBlock Foreground="{StaticResource TextColor}"  HorizontalAlignment="Center" Height="88" Margin="0,170,0,0" TextAlignment="Center" FontSize="70" TextWrapping="Wrap" Text="SportFIT" VerticalAlignment="Top" Width="282"/>
        
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
      
            <Image Source="../images/SportFIT_logo.PNG" Width="400" Height="390" />

            <!-- Texto "SportFIT" -->
            <TextBlock Text="Sport" FontSize="24" FontWeight="Bold" Foreground="#134f5c" Margin="0,10,0,0" Width="73"/>
            <TextBlock Text="FIT" FontSize="24" FontWeight="Bold" Foreground="#fd923b" Width="46"/>
        </StackPanel>

    </Grid>
</Window>
